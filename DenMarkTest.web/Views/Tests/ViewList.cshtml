@using DenMarkTest.web.ViewModel
@using DenMarkTest.core.Abstract
@using DenMarkTest.DataAccessLayer.Entities
@inject ITestService  _service
<br/><br/>
<div class="row">

    <div class="col-md-3">

    </div>


    <div class="col-md-6">
        <input type="button" value="Creat New Test" name="btnNewTest" class="btn btn-block"/>
        <table>

            <tr>
                <th>Date</th>
                <th>Number of Participants</th>
                <th>Test type</th>
            </tr>

            @{
                var Test = await _service.getAllTest();
                var result = Test.OrderByDescending(x => x.testDate).ToList();
                foreach (var item in result)
                {
                    if (item != null)
                    {

                <tr>
                    <td>@item.testDate</td>
                    <td>@item.TestParticipants.Count()</td>
                    <td>@item.testType</td>
                </tr>
            }
                }

            }
        </table>
    </div>



    <div class="col-md-3">

    </div>

</div>

