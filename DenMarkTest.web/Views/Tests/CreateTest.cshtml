@using DenMarkTest.web.ViewModel
@using DenMarkTest.core.Abstract
@using DenMarkTest.DataAccessLayer.Entities
@using DenMarkTest.common.Utilities
@{
    ViewData["Title"] = "CreateTest";
}
@model CreateTestViewModel
@inject ITestService  _service

<div class="row">


    <div class="col-md-3">

    </div>

    <div class="col-md-6">
        <h4>Create a new Cooper Test</h4>
        <section>
            <form asp-action="CreateTest" method="post" asp-antiforgery="true">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="testDate"></label>
                    <input asp-for="testDate" class="form-control" />
                    <span asp-validation-for="testDate" class="text-danger"></span>
                </div>

                <div class="form-group">

                    <select class="form-control" name="testType">
                        @{
                            var types = await _service.getTestTypes();
                                     foreach (var item in types)
                                    {
                                            <option value="@item.testType">@item.testType</option>

                                     }
                        }
                    </select>

                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-default">Create</button>
                </div>
            </form>
        </section>
    </div>

    <div class="col-md-3">

    </div>


</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

